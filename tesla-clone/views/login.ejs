<section class="min-h-screen bg-black flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8 bg-gray-900 p-8 rounded-lg">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-bold text-white">Sign in to your Tesla Account</h2>
    </div>
    <form class="mt-8 space-y-6">
      <div class="rounded-md shadow-sm space-y-4">
        <div>
          <label for="email" class="sr-only">Email address</label>
          <input id="email" name="email" type="email" required
                 class="appearance-none relative block w-full px-4 py-3 border border-gray-700 placeholder-gray-500 text-white rounded-md focus:outline-none focus:ring-tesla-red focus:border-tesla-red focus:z-10 sm:text-sm bg-gray-800"
                 placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" required
                 class="appearance-none relative block w-full px-4 py-3 border border-gray-700 placeholder-gray-500 text-white rounded-md focus:outline-none focus:ring-tesla-red focus:border-tesla-red focus:z-10 sm:text-sm bg-gray-800"
                 placeholder="Password">
        </div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <input id="remember-me" name="remember-me" type="checkbox"
                 class="h-4 w-4 text-tesla-red focus:ring-tesla-red border-gray-700 rounded bg-gray-800">
          <label for="remember-me" class="ml-2 block text-sm text-gray-300">Remember me</label>
        </div>

        <div class="text-sm">
          <a href="#" class="font-medium text-tesla-red hover:text-red-400">Forgot your password?</a>
        </div>
      </div>

      <div>
        <button type="submit"
                class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-tesla-red hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-tesla-red transition">
          Sign in
        </button>
      </div>
      
      <div class="text-center text-sm text-gray-400">
        Don't have an account? 
        <a href="#" class="font-medium text-tesla-red hover:text-red-400">Create one</a>
      </div>
      
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-700"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-gray-900 text-gray-400">Or continue with</span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-2 gap-3">
          <div>
            <a href="#"
               class="w-full inline-flex justify-center py-2 px-4 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-sm font-medium text-white hover:bg-gray-700 transition">
              <i class="fab fa-google text-red-500"></i>
            </a>
          </div>
          <div>
            <a href="#"
               class="w-full inline-flex justify-center py-2 px-4 border border-gray-700 rounded-md shadow-sm bg-gray-800 text-sm font-medium text-white hover:bg-gray-700 transition">
              <i class="fab fa-apple"></i>
            </a>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>